<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_margin_top"
        card_view:cardElevation="@dimen/card_elevation"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardCornerRadius="@dimen/card_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:minHeight="80dp"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/txt_counter"
                android:text="1"
                style="@style/CounterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="@dimen/view_margin_left"
                android:layout_marginStart="@dimen/view_margin_left"
                android:layout_marginTop="@dimen/view_margin_left"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/view_margin_left"/>

        <ImageView
                android:id="@+id/img_done"
                android:visibility="invisible"
                android:padding="@dimen/view_margin_left"
                android:gravity="center"
                android:src="@drawable/ic_done"
                android:background="@drawable/circle_filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="@dimen/view_margin_left"
                android:layout_marginStart="@dimen/view_margin_left"
                android:layout_marginTop="@dimen/view_margin_left"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/view_margin_left"/>

        <TextView
                android:id="@+id/txt_topic_heading"
                android:text="TextView"
                android:textStyle="normal"
                style="@style/LessonHeading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/view_margin_left"
                android:layout_marginRight="@dimen/view_margin_left"
                android:layout_marginTop="@dimen/view_margin_left" app:layout_constraintStart_toEndOf="@+id/img_done"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>